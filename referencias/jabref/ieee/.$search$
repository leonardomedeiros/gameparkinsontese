@Article{Salarian2004,
  author   = {A. Salarian and H. Russmann and F. J. G. Vingerhoets and C. Dehollain and Y. Blanc and P. R. Burkhard and K. Aminian},
  title    = {Gait assessment in Parkinson's disease: toward an ambulatory system for long-term monitoring},
