@Article{Salarian2007a,
  author   = {A. Salarian and H. Russmann and C. Wider and P. R. Burkhard and F. J. G. Vingerhoets and K. Aminian},
  title    = {Quantification of Tremor and Bradykinesia in Parkinson's Disease Using a Novel Ambulatory Monitoring System},
