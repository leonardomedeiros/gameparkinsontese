@InProceedings{Mera2012,
  author    = {T. O. Mera and M. A. Burack and J. P. Giuffrida},
  title     = {Quantitative assessment of levodopa-induced dyskinesia using automated motion sensing technology},
  booktitle = {Proc. Annual Int. Conf. of the IEEE Engineering in Medicine and Biology Society},
