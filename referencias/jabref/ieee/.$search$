@InProceedings{Pan2015,
  author    = {J. I. Pan and Y. C. Huang},
  title     = {Intelligent fall prevention for Parkinson's disease patients based on detecting posture instabilily and freezing of gait},
  booktitle = {Proc. 12th Int Informatics in Control, Automation and Robotics (ICINCO) Conf},
